{
	"name": "fuzzy join flow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "orders",
						"type": "DatasetReference"
					},
					"name": "orders",
					"description": "left hand side table"
				},
				{
					"dataset": {
						"referenceName": "assets_table",
						"type": "DatasetReference"
					},
					"name": "assets",
					"description": "right hand side dataset"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "fuzzy_join_table",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "join"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as string,",
				"          orderId as string,",
				"          orderItemName as string,",
				"          orderItemFuzzyName as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false) ~> orders",
				"source(output(",
				"          id as string,",
				"          uuid as string,",
				"          assetName as string,",
				"          assetIndex as string,",
				"          assetId as string,",
				"          hierarchyPath as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false) ~> assets",
				"orders, assets join(fuzzyCompare(orderItemName, assetName, 80.00),",
				"     joinType:'left',",
				"     matchType:'fuzzy',",
				"     ignoreSpaces: true,",
				"     scoreColumn:'similarityScor',",
				"     broadcast: 'off')~> join",
				"join sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     optimizedWrite: false,",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}